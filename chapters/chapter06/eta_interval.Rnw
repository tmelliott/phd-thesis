suppressPackageStartupMessages(library(tidyverse))

mean <- 10
log_sd <- log(2)
sd <- 6
pbase <- tibble(x = seq(0, 30, by = 1)) %>%
  mutate(
    pf = plnorm(x, log(mean), log_sd),
    kf = pnorm(x, mean, sd)
