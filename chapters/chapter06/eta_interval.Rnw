KF1 <- qnorm(0.1, mean, sd)
KF5 <- qnorm(0.5, mean, sd)
KF9 <- qnorm(0.9, mean, sd)
p_kf <- pbase +
  geom_path(aes(y = kf)) +
  geom_segment(aes(x = KF1, xend = KF1, y = 0, yend = 0.1), lty = 3, lwd = 0.5) +
  geom_segment(aes(x = KF5, xend = KF5, y = 0, yend = 0.5), lty = 2, lwd = 0.5) +
